<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.showcaseocala.com/wp-content/uploads/2020/06/Review_Feature.jpg);">
    <h1 class = "text-center mt-5" style="color: white">Todos los servicios </h1>
    </div>
<div id="map" class="container m-5"
     style="width: 50%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>

<div class="container">
    

    <div class="cards mt-5">
    <% @services.each do |service| %>
    <%= link_to service_path(service) do %>
    <div class="card-trip">
    
        <%= cl_image_tag service.photo.key %>
            <div class="card-trip-infos">
            <div>
            <h2><%=  service.plan %></h2>
            <%# <%= link_to "Ver mÃ¡s..", service_path(service) %>
            </div>
            <h2 class="card-trip-pricing">$<%=  service.price.to_i %></h2>            
            <% user = @users.sample %>
              <%= cl_image_tag user.photo.key, class: "card-trip-user avatar-bordered" %>                                  
        
        </div>
        
        </div>
        <% end %>
         <% end %>
        
    </div>
    
</div>




